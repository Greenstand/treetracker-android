<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="0dip"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:id="@+id/fragment_home">
    
    <ImageView 
        android:id="@+id/fragment_home_logo" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:contentDescription="logo"
        android:layout_alignParentTop="true"
        />

   <TextView
        android:id="@+id/fragment_home_welcome" 
    	android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:textColor="#FF916B4A"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="@string/welcome"
        android:layout_below="@+id/fragment_home_logo"
        />

   <Button
        android:id="@+id/fragment_home_map"
    	android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/map"
        android:textColor="#FF916B4A"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/white_gray_gradient"
        android:layout_below="@+id/fragment_home_welcome"
        />
   
   <Button
        android:id="@+id/fragment_home_data"
    	android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/data"
        android:textColor="#FF916B4A"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/white_gray_gradient"
        android:layout_below="@+id/fragment_home_map"
        />
   
   <Button
        android:id="@+id/fragment_home_settings"
    	android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="8dp"        
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/settings"
        android:textColor="#FF916B4A"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/white_gray_gradient"
        android:layout_below="@+id/fragment_home_data"
        />
        
   <Button
        android:id="@+id/fragment_home_exit"
    	android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="8dp"        
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/exit"
        android:textColor="#FF916B4A"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/white_gray_gradient"
        android:layout_below="@+id/fragment_home_settings"
        />      
      
</RelativeLayout>


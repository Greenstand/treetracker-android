    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="TextTitleStyle">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/blackColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    
    <style name="TextBodyStyle">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textColor">@color/blackColor</item>
    </style>

    <style name="TextInactiveStyle">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textColor">@color/blackWithOpacity54Opacity</item>
    </style>

    <style name="InactiveButtonStyle" parent="TextInactiveStyle">
       <item name="android:background">@drawable/button_inactive</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActiveButtonStyle" parent="TextBodyStyle">
        <item name="android:background">@drawable/button_active</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>